<Window x:Class="TechnoCAD.WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:control="clr-namespace:TechnoCAD.WPFTest.Controllers"
        xmlns:type="clr-namespace:TechnoCAD.WPFTest.Models"
        xmlns:pages="clr-namespace:TechnoCAD.WPFTest.Views.Pages"
        xmlns:local="clr-namespace:TechnoCAD.WPFTest"
        mc:Ignorable="d"
        Title="TechnoCAD.WPFTest" 
        Height="600" 
        Width="1000">

    <Window.DataContext>
        <control:MainWindowController/>
    </Window.DataContext>
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="ModelItemsData"
                          DataType="{x:Type type:AbstractModel}">
                <Border BorderBrush="Blue"
                        x:Name="SelectedModel"
                        BorderThickness="1"
                        CornerRadius="2"
                        Width="Auto"
                        Tag="{Binding View}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Title}" 
                                   FontSize="12" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Id}"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0"
                   Margin="5">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Добавить здание" Command="{Binding AddBuildingCommand}"
                        Grid.Column="0"/>

                <Button Content="Добавить участок" Command="{Binding AddParcelCommand}"
                        Grid.Column="2"/>
            </Grid>

            <ListBox x:Name="ModelListBox"
                     HorizontalContentAlignment="Stretch"
                     ItemsSource="{Binding ModelsItems}" 
                     SelectedItem="{Binding SelectedModel}"
                     ItemTemplate="{DynamicResource ModelItemsData}">
                
                
            </ListBox>
            
        </DockPanel>
        <GridSplitter Width="3" 
                      Background="White"/>
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Frame Grid.Row="0"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"
                   Content="{Binding EditPage,Mode=OneWay}"
                   NavigationUIVisibility="Hidden"/>
            
            <GridSplitter Height="5" BorderThickness="5"
                          Background="Black"
                          Grid.Row="0"/>
            <DataGrid Grid.Row="1"
                      Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"/>
                    <DataGridTextColumn Width="*"/>
                    <DataGridTextColumn Width="*"/>
                </DataGrid.Columns>

            </DataGrid>
        </Grid>
    </Grid>
</Window>
